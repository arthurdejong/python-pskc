>>> from pskc import PSKC


>>> pskc = PSKC('tests/aes128-cbc.pskcxml')
>>> pskc.encryption.key = '12345678901234567890123456789012'.decode('hex')
>>> pskc.keys[0].secret
'12345678901234567890'


>>> pskc = PSKC('tests/aes192-cbc.pskcxml')
